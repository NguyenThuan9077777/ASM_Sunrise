<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    tools:context=".CaNhan.CaNhan">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:background="@drawable/backroundcanhan"/>
        <LinearLayout
            android:layout_marginTop="-40sp"
            android:layout_width="300sp"
            app:backgroundTint="@null"
            android:background="@drawable/canhan"
            android:layout_height="120sp">
            <ImageView
                android:layout_marginTop="30sp"
                android:layout_marginLeft="10sp"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/o"
                android:src="@drawable/avtuser"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunrise"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="28sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã ứng viên : "
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:layout_marginTop="48sp"/>
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_marginLeft="30sp"
               android:layout_marginTop="10sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:text="Kinh nghiệm làm việc"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#4CAF50"
                   android:layout_marginLeft="110sp"
                   android:text="Sửa"/>
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Chưa cập nhật"
               android:textColor="#FF9800"
               android:layout_marginTop="8sp"
               android:layout_marginLeft="30sp"/>
       </LinearLayout>
        <View
            android:layout_marginTop="6sp"
            android:layout_width="340sp"
            android:layout_height="0.5sp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="30sp"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Công việc mong muốn"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:layout_marginLeft="100sp"
                    android:text="Sửa"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chưa cập nhật"
                android:textColor="#FF9800"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="30sp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="6sp"
            android:layout_width="340sp"
            android:layout_height="1sp"
            android:background="@color/black"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý hồ sơ"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="30sp"/>
            <LinearLayout
                android:layout_marginTop="8sp"
                android:layout_marginLeft="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái tìm việc"
                    android:drawableLeft="@drawable/baseline_stacked_line_chart_24"
                    android:drawablePadding="10sp"
                    android:textSize="14sp"/>
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/baseline_toggle_off_24"
                    android:layout_marginLeft="150sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý tìm việc"
                android:textSize="20sp"
                android:layout_marginLeft="30sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@null"
                    android:background="@drawable/quanlytimviec"
                    android:layout_width="150sp"
                    android:orientation="vertical"
                    android:layout_height="100sp">
                    <ImageView
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/baseline_shopping_bag_24"/>
                    <LinearLayout
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Việc làm đã ứng tuyển : "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17sp"
                            android:layout_marginLeft="-90sp"
                            android:text="0" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@null"
                    android:background="@drawable/quanlytimviec"
                    android:layout_width="150sp"
                    android:orientation="vertical"
                    android:layout_height="100sp">
                    <ImageView
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/baseline_bookmark_24"/>
                    <LinearLayout
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Việc làm đã lưu : "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:layout_marginLeft="10sp"
                            android:text="0" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@null"
                    android:background="@drawable/quanlytimviec"
                    android:layout_width="150sp"
                    android:orientation="vertical"
                    android:layout_height="100sp">
                    <ImageView
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/baseline_maps_home_work_24"/>
                    <LinearLayout
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Công ty đang theo dõi : "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="17sp"
                            android:layout_marginLeft="-90sp"
                            android:text="0" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:backgroundTint="@null"
                    android:background="@drawable/quanlytimviec"
                    android:layout_width="150sp"
                    android:orientation="vertical"
                    android:layout_height="100sp">
                    <ImageView
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/baseline_check_circle_24"/>
                    <LinearLayout
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Việc làm phù hợp : "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1sp"
                            android:layout_marginLeft="10sp"
                            android:text="0" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cài đặt tài khoản"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu "
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="8sp"
                android:layout_marginLeft="30sp"
                android:textSize="14sp"
                android:layout_marginTop="10sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_chevron_right_24"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="180sp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10sp"
            android:layout_width="340sp"
            android:layout_height="1sp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt bảo mật "
                android:drawableLeft="@drawable/baseline_security_24"
                android:drawablePadding="8sp"
                android:layout_marginLeft="30sp"
                android:textSize="14sp"
                android:layout_marginTop="10sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_chevron_right_24"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="165sp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10sp"
            android:layout_width="340sp"
            android:layout_height="1sp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trợ giúp"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="8sp"
                android:layout_marginLeft="30sp"
                android:textSize="14sp"
                android:layout_marginTop="10sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_chevron_right_24"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="165sp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10sp"
            android:layout_width="340sp"
            android:layout_height="1sp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#B4E7ED">
           <LinearLayout
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Phiên bản ứng dụng : "/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1.0"/>
           </LinearLayout>
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:drawableRight="@drawable/baseline_logout_24"
                android:drawablePadding="10sp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:labelVisibilityMode="selected"
            app:menu="@menu/menu_bottom"/>
    </LinearLayout>


</ScrollView>