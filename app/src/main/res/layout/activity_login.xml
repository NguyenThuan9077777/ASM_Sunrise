<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10sp"
    tools:context=".GiaoDienDangNhap.Login">
    <ImageView
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:src="@drawable/logosunrise"
        android:layout_width="wrap_content"
        android:layout_height="500px"/>
    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:background="#FDDDDD"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUserLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textSize="15sp"
            android:drawablePadding="5sp"
            android:drawableStart="@drawable/ic_person"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FDDDDD"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPasslogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textSize="15sp"
            android:drawablePadding="5sp"
            android:drawableEnd="@drawable/ic_eye"
            android:drawableStart="@drawable/ic_key"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tvForgotPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu ?"
        android:textAlignment="textEnd"
        android:layout_marginRight="20sp"
        android:textSize="15sp"
        android:layout_marginTop="12sp"/>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:background="@drawable/button_login"
            app:backgroundTint="@null"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_marginLeft="15sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Đăng ký"
            android:background="@drawable/button_login"
            app:backgroundTint="@null"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoặc"
        android:textAlignment="center"
        android:layout_marginRight="20sp"
        android:textSize="15sp"
        android:layout_marginTop="20sp"/>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginStart="-10sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logogoogle"
            android:layout_width="25sp"
            android:layout_height="25sp"/>
        <ImageView
            android:layout_marginStart="5sp"
            android:src="@drawable/logofacebook"
            android:layout_width="25sp"
            android:layout_height="25sp"/>
        <ImageView
            android:layout_marginStart="5sp"
            android:src="@drawable/logotwitter"
            android:layout_width="25sp"
            android:layout_height="25sp"/>

    </LinearLayout>



</LinearLayout>