<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.TaiCV">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="70sp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="-30sp"
            android:textAlignment="center"
            android:text="Tải CV lên"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/taicv2">
        <TextView
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_check_circle_24"
            android:drawablePadding="10sp"
            android:text="Tải CV lên"
            android:textColor="#4CAF50"/>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:background="@drawable/taicv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70sp">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload CV để các cơ hội làm việc tự tìm đến bạn"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:textAlignment="center"/>
            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm đến 50% thời gian cần thiết đề tìm được một công việc phù hợp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30sp"
            android:layout_gravity="center"
            android:layout_width="370sp"
            android:background="@drawable/taicv3"
            android:orientation="vertical"
            android:layout_height="200sp">
            <ImageView
                android:layout_width="300sp"
                android:layout_height="160sp"
                android:src="@drawable/baseline_cloud_upload_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn CV của bạn trong bộ nhớ"
                android:textAlignment="center"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="15sp"
            android:layout_gravity="center"
            android:layout_width="370sp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            app:backgroundTint="@null"
            android:text="Tải CV lên"/>
    </LinearLayout>


</LinearLayout>