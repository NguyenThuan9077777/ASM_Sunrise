<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10sp"
    tools:context=".TrangChu.TrangChu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="350sp"
                android:layout_height="80sp"
                android:background="@drawable/chaosunrise"
                app:backgroundTint="@null">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    app:backgroundTint="@null"
                    android:background="@drawable/o"
                    android:src="@drawable/avtuser" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:text="Chào Sunrise"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="@drawable/radius">

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="12sp"
                android:src="@drawable/ic_search" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn muốn tìm việc ?" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Địa điểm - Công ty - Ngành ..."
                    android:textColor="#C3B8B8" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="12sp"
                    android:backgroundTint="@null"
                    android:background="@drawable/o"
                    android:src="@drawable/logovieclam" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:text="Việc làm" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                >
                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="12sp"
                    android:backgroundTint="@null"
                    android:background="@drawable/o"
                    android:src="@drawable/img_2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8sp"
                    android:text="Công ty" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="60sp">
            <ImageView
                android:layout_width="410sp"
                android:layout_height="60sp"
                android:src="@drawable/backroundslogan"/>
            <TextView
                android:layout_marginLeft="-380sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm việc làm -  Tìm giá trị bản thân"
                android:drawableRight="@drawable/ic_love"
                android:drawablePadding="10sp"
                android:layout_marginTop="16sp"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_marginLeft="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gợi ý việc làm phù hợp"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem tất cả"
                android:textColor="#86D389"
                android:layout_marginLeft="80sp"/>
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:layout_marginLeft="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Việc làm tốt nhất"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem tất cả"
                android:textColor="#86D389"
                android:layout_marginLeft="130sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:labelVisibilityMode="selected"
            app:menu="@menu/menu_bottom"/>
    </LinearLayout>
</ScrollView>