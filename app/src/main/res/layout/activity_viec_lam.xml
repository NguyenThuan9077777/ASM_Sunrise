                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/baseline_location_on_24"
                        android:drawablePadding="10sp"
                        android:text="Vị trí" />

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:text="Hồ Chí Minh"
                        android:textColor="#44A348" />
                </LinearLayout>

                <View
                    android:layout_width="1sp"
                    android:layout_height="123sp"
                    android:layout_marginLeft="23sp"
                    android:layout_marginTop="0sp"
                    android:background="#CAB5B5" />

                <LinearLayout
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/baseline_star_24"
                        android:drawablePadding="10sp"
                        android:text="Kinh nghiệm " />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dưới 1 năm"
                        android:textColor="#44A348" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="120sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginTop="-280sp"
            android:background="@drawable/canhan"
            android:src="@drawable/logocongty"
            app:backgroundTint="@null" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:layout_marginTop="220sp"
            android:text="Thông tin chung"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="8sp">

            <ImageView
