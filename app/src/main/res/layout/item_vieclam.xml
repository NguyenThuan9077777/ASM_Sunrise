<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:src="@drawable/logocongty"
            android:background="@drawable/custom_edittext"
            android:layout_weight="2"
            android:layout_gravity="left"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:text="Nhân viên hỗ trợ khách hàng điện máy gia dụng..."
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/baseline_bookmark_24"
                android:layout_marginLeft="222dp"
                android:layout_marginTop="-50dp" />

            <TextView
                android:id="@+id/tencty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHI NHÁNH CTY TNHH COMPANY NAME TẠI ...."
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dưới 1 năm"
                android:background="#BDBDBD"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:layout_below="@+id/tencty"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HỒ CHÍ MINH"
                android:background="#BDBDBD"
                android:textSize="15sp"
                android:layout_marginTop="-20dp"
                android:layout_below="@+id/tencty"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tới 8 triệu"
                android:textColor="#08FF00"
                android:textSize="20sp"/>


        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>